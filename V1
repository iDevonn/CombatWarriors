local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()
local Window = OrionLib:MakeWindow({Name = "DevHUB", HidePremium = false, SaveConfig = true, ConfigFolder = "", IntroText = "DevHUB"})


-- Functions
local function GloryNearby()
    
    local Players = game:GetService("Players")
    local RemoteStorage = game:GetService("ReplicatedStorage"):WaitForChild("Remotes")
    local GloryRemote = RemoteStorage:WaitForChild("Glory")
    
    for _, player in ipairs(Players:GetPlayers()) do
        local args = {
            [1] = player
        }
        GloryRemote:InvokeServer(unpack(args))
    end
end

local function FarmKills()

    local Players = game:GetService("Players")
    local RemoteStorage = game:GetService("ReplicatedStorage"):WaitForChild("Remotes")
    local ReviveRemote = RemoteStorage:WaitForChild("Revive")
    
    for _, player in ipairs(Players:GetPlayers()) do
        local args = {
            [1] = Players:WaitForChild(player.Name)
        }
        ReviveRemote:InvokeServer(unpack(args))
    end
end

local function InfiniteYield()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
end

local function ChangeGloryAnimation(animationName)
    local args = {
        [1] = animationName,
        [2] = "M",
        [3] = "Change"
    }
    
    game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("GloryData"):InvokeServer(unpack(args))
end

-- PlayerTab
local PlayerTab = Window:MakeTab({
    Name = "TROLL MENU",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- PlayerButtons
PlayerTab:AddButton({
    Name = "Glory Nearby",
    Callback = function()
        GloryNearby()
    end    
})

PlayerTab:AddButton({
    Name = "Kill Aura",
    Callback = function()
        FarmKills()
    end    
})

PlayerTab:AddButton({
    Name = "InfiniteYield",
    Callback = function()
        InfiniteYield()
    end    
})

PlayerTab:AddButton({
    Name = "Animation1",
    Callback = function()
        ChangeGloryAnimation("Glory_1")
    end    
})

PlayerTab:AddButton({
    Name = "Animation2",
    Callback = function()
        ChangeGloryAnimation("Glory_2")
    end    
})

PlayerTab:AddButton({
    Name = "Animation3",
    Callback = function()
        ChangeGloryAnimation("Glory_3")
    end    
})

PlayerTab:AddButton({
    Name = "Animation4",
    Callback = function()
        ChangeGloryAnimation("Glory_4")
    end    
})

PlayerTab:AddButton({
    Name = "Animation5",
    Callback = function()
        ChangeGloryAnimation("Glory_5")
    end    
})

PlayerTab:AddButton({
    Name = "Animation6",
    Callback = function()
        ChangeGloryAnimation("Glory_6")
    end    
})

PlayerTab:AddButton({
    Name = "Animation7",
    Callback = function()
        ChangeGloryAnimation("Glory_7")
    end    
})

PlayerTab:AddButton({
    Name = "Animation8",
    Callback = function()
        ChangeGloryAnimation("Glory_8")
    end    
})

PlayerTab:AddButton({
    Name = "Animation9",
    Callback = function()
        ChangeGloryAnimation("Glory_9")
    end    
})

OrionLib:Init()
